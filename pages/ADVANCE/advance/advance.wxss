/* pages/ADVANCE/advance/advance.wxss */
.advance-li{
  background: #fff;
  position: relative;
  margin-bottom: 10rpx;
  height: 200rpx;

}
.advance-left{
  width: 180rpx;
  height: 180rpx;
  margin:10rpx;
  display: inline-block;
  background: #FF3E02;
  vertical-align: top;

}
.advance-right{
  display: inline-block;
  width: 550rpx;
  padding:10rpx;
  
}
.advance-title{
  font-size: 30rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2; 
}
.advance-text{
  color: #888888;
  font-size: 24rpx;
}
.advance-text .red{
   font-size: 30rpx;
   color: #FF3E02
}
.advance-btn{
  width: 140rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  color: #fff;
  background: linear-gradient(#F8B423, #FF3E02);
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
   font-size: 30rpx;
}