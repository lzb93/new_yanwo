page {
  background-color: #fff;
}
.search_container {
  z-index: 9;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 0;
  background-color: #fff;
}
.search {
  overflow: hidden;
  width: 90%;
  height: 62rpx;
  line-height: 60rpx;
  border: 1rpx solid #DBDBDB;
  margin: 0 auto;
  border-radius: 50rpx;
}
.search_left {
  width: 72%;
}
.search_icon {
  width: 9%;
  height: 34rpx;
  margin: 12rpx 0 0 20rpx;
}
.search_icon image {
  display: block;
  width: 100%;
  height: 100%;
}
.search_input {
  width: 90%;
  padding: 0 15rpx;
}
.search_input input {
  display: block;
  width: 100%;
  height: 62rpx;
  line-height: 62rpx;
  font-size: 26rpx;
 }
 .search_btn {
   width: 20%;
   text-align: center;
   font-size: 26rpx;
 }
 .icon_empt {
   width: 6%;
   height: 34rpx;
   margin-top: 12rpx;
 }
 .icon_empt image {
   display: block;
   width: 100%;
   height: 100%;
 }

.main {
  padding-top: 100rpx;
  height: 100%;
}
.main_left {
  position: fixed;
  top: 100rpx;
  left: 0;
  bottom: 0;
  width: 25%;
  background-color: #F5F4F4;
}
.nav_item {
  padding: 25rpx 0;
  border-bottom: 1rpx solid #DDDDDD;
  border-left: 6rpx solid transparent;
  font-size: 28rpx;
  color: #A2A2A2;
  letter-spacing: 3rpx;
  text-align: center;
}
.nav_item.active {
  border-left: 6rpx solid #F5F4F4;
  background-color: #fff;
}
.main_right {
  width: 75%;
  height: 100%;
  margin-left: 25%;
  white-space: nowrap;
}
.product_item {
  padding: 15rpx 25rpx;
  background-color: #fff;
}
.item_content {
  width: 300rpx;
}
.product_item .item_img {
  width: 188rpx;
  height: 188rpx;
  border: 1rpx solid #DDDDDD;
  border-radius: 4rpx;
  background-color: #f5f5f5;
}
.product_item .item_img image {
  display: block;
  width: 100%;
  height: 100%;
}
.item_content .item_title {
  height: 90rpx;
  font-size: 28rpx;
}
.item_content .item_money {
  margin-top: 45rpx;
  font-size: 34rpx;
  align-items: center;
}