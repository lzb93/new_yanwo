
.layout {
  background-color: #fff;
  padding: 10rpx 25rpx;
}
.title {
  width: 25%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}
.input {
  width: 75%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}

.footer_btn {
  position: fixed;
  bottom: 0;
  width: 100%;
  left: 0;
  background-color: #FFA00A;
  padding: 20rpx 0;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
}

.item {
  margin: 20rpx 0; 
  background-color: #fff;
}
.item_btn {
  width: 32%;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 25rpx;
  border-left: 1rpx solid #EFEFF4;
  font-size: 30rpx;
}
.item_input {
  display: block;
  width: 68%;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 25rpx;
  font-size: 30rpx;
}