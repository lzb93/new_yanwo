 pages{
   background: #ffffff;
 }

.mjxlist-name{
  line-height: 100rpx;
  padding-left: 30rpx;
}
.mjxdel-con{
  color: #666;
  font-size: 26rpx;
  padding: 30rpx;
}
.mjxdel-img{
  width: 100%;
  padding:0 30rpx;
}
.mjxlist-list{
  padding-bottom: 150rpx;
}


 .mjxdel-foot{
   width: 100%;
   height: 100rpx;
   line-height: 100rpx;
   text-align: center;
   display: flex;
   position: fixed;
   bottom: 0;
   left: 0;
   background: #ffffff;

 }
 .mjxdel-foot .btn{
   width: 50%;
   height: 100rpx;
   float: left;
   border-right:1px solid #dcdcdc;

 }
.mjxdel-alt{
  width: 500rpx;

  height: 220rpx;
  background: #ffffff;
  border:1px solid #34a123;
  border-radius:15rpx;
  position: fixed;
  left: 125rpx;
  top: 350rpx;

}
.mjxdel-alt input{
  border: 1px #dcdcdc solid;
  width: 450rpx;
  margin: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  position: absolute;
}
.mjxdel-alt .btn{
  position: absolute;
  bottom: 0;
  width: 250rpx;
  flex: 1;
  background: #dcdcdc;
  margin-right: 1rpx;
  text-align: center;
  line-height: 80rpx;
}