@import './style/weui.wxss';
image{
  width: 100%;
  height: 100%;
  display: block;
}
.wxParse-p image{
  width: 100% !important; 
}
page {
   background: #f2f3f4;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
view, navigator, image, input, scroll-view {
  box-sizing: border-box;
  color: #2A2A2A;
}
.clearfix:after{
  content:"\200B";
  display:block;
  height:0;
  clear:both;
}
.right {
  float: right;
}
.left {
  float: left;
}
.none {
  display: none !important;
}
.tx_ov{
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.tx_ov2 {
  display: -webkit-box;
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 2; 
  overflow: hidden;
}

.flex_row {
  display: flex;
  flex-direction: row wrap;
}
.flex_between {
  display: flex;
  justify-content: space-between; 
  flex-flow: row wrap;
}
.align_items {
  display: flex;
  align-items: baseline;
}
.color_red {
  color: #B61313 !important;
}
.main_color {
  color: #FF5858 !important;
}
.main_bg {
  background: #FF5858 !important;
}
.color_gray {
  color: #B3B1B2 !important;
}
.color_7a {
  color: #B6B6B6 !important;
}
.tr{text-align: right}
.tc{text-align: center}
.tl{text-align: left}
.fl{float: left}
.fr{float: right}
.huang{
  color: #FF9E14;
}



/* 遮罩层 */
.authorize_bg{
   position:fixed;
   top:0;
   left:0;
   width:100%;
   height:100%;
   background-color:rgba(0, 0, 0, 0.5);
   z-index:9999;
}
.authorize_warp{
  margin: auto;
  margin-top: 40%;
  margin-bottom: 50rpx;
  background: #ffffff;
  width: 600rpx;
  text-align: center;
  border-radius: 8rpx;
  overflow: hidden;


}
.authorize_img{
  width: 90rpx;
  height: 90rpx;
  margin:50rpx auto 0 auto;
  

}
.authorize_text{
  color: #B6B6B6;
  line-height: 90rpx;

}
.authorize_btn{
  background: none;
  border: none;
  display: inline-block;
  width: 50%;
  text-align: center;
  line-height: 90rpx;
  overflow: auto;
  font-size: 34rpx;

}
.authorize_btn::after{ border: none; } 

